<UserControl x:Class="MusgramClient.Views.ForgotPassword.ByMail.FPMailEnterNPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusgramClient.Views.ForgotPassword.ByMail"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Authentication, Source={StaticResource Locator}}">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="30">
                Введите новый пароль
            </TextBlock>
            <PasswordBox Margin="0 10 0 10" FontSize="35"/>
            <Button Command="{Binding LogInPageOpen}" Height="45" FontSize="25" HorizontalAlignment="Center" Content="Завершить"/>
        </StackPanel>
    </Grid>
</UserControl>
